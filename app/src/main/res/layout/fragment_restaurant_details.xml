<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/padding_16">

    <TextView
        android:id="@+id/tvDetailsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tvDetailsCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailsName"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tvDetailsPostCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailsCity"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tvDetailsAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailsPostCode"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>